<div class="container">
  <div class="page-header">
    <h1>Machine List</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">Most Recent Machines</div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
            </tr>
          </thead>
          <tbody>
            <% @results.each do |result| %>
              <tr data-link="<%= machine_path(result)%>">
                <td><%= link_to result.title, machine_path(result) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @results %>
    </div>
    
  </div>
</div>

<script>
  $("tr[data-link]").click(function() {
  window.location = $(this).data('link');
});
</script>