<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar navbar-default">
    <div class="container">
      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to ("Machine Cheat Sheet <span class='label label-warning'>Beta</span>").html_safe, root_path, :class => "navbar-brand" %>
      </div>
      
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "All Machines", machines_path %></li>
        </ul>
        <%= search_form_for @machines, url: machines_path, :html => {:class => "navbar-form navbar-left", :role => "search"} do |f| %>
          <div class="form-group">
            <div class="sr-only"><%= f.label :title_cont %></div>
            <%= f.search_field :title_cont, :class => "form-control", :placeholder => "Search by Machine" %>
          </div>
          <%= f.submit nil, :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </nav>
  <% if flash[:notice] %>
    <div class="container">
      <p class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="container">
      <p class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </p>
    </div>
  <% end %>

<%= yield %>

<div class="container">
  <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
