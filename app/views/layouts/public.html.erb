<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : "Machine Cheat Sheet" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar navbar-default">
    <div class="container">
      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to (" <span class='label label-warning'>Beta</span>").html_safe, root_path, :class => "navbar-brand" %>
      </div>
      
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to "All Machines", machines_path %></li>
        </ul>
      </div>
    </div>
  </nav>
  <% if flash[:notice] %>
    <div class="container">
      <p class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="container">
      <p class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </p>
    </div>
  <% end %>
  
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">

          <%= form_tag machines_path, :method => 'get', :class => 'search-form' do %>
              <%= text_field_tag :search, params[:search], class: "typeahead search-form-input", placeholder: "Search by Machine" %>

                <%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>


          <% end %>

              
      </div><!-- /.col-lg-6 -->
    </div>
  </div>

<%= yield %>

<div class="container">
  <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
