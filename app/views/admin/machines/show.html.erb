<div class="container">
  <div class="page-header">
    <h1>Showing <%= @machine.title %></h1>
  </div>
  <div class="pull-right">
    <div class="btn-group" role="group" aria-label="...">
      <%= link_to "Edit", edit_admin_machine_path, class: "btn btn-warning" %>
      <%= link_to "All Parts", admin_parts_path, class: "btn btn-info" %>
      <%= link_to "All Machines", admin_machines_path, class: "btn btn-default" %>
    </div>
    <%= render "layouts/new_button" %>
  </div>
</div>

<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">Air Filters</div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Brand</th>
              <th>Part Number</th>
            </tr>
          </thead>
          <tbody>
            <% @machine.parts.where("type = ?", "AirFilter").each do |a| %>
              <tr>
                <td><%= a.brand %></td>
                <td><%= a.part_number %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>