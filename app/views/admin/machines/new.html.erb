<div class="container">
  
  <div class="page-header">
    <h1>New Machine</h1>
  </div>

  <%= form_for @machine, url: admin_machines_path, html: {class: 'form-horizontal' } do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title, class: 'col-md-3' %>
        <div class="col-sm-9">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.fields_for :year do |y| %>
        <%= y.label :year, class: 'col-md-3' %>
          <div class="col-sm-9">
            <%= y.text_field :year, class: 'form-control' %>
          </div>
       <% end %>
      </div>
      <div class="form-group">
        <%= f.fields_for :make do |make| %>
        <%= make.label :make, class: 'col-md-3' %>
          <div class="col-sm-9">
            <%= make.text_field :make, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.fields_for :model do |model| %>
        <%= model.label :model, class: 'col-md-3' %>
          <div class="col-sm-9">
            <%= model.text_field :model, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">(<%=@list_all_m.count%>) Machines</div>
          <ul class="list-group">
          <% @list_all_m.each do |machine| %>
            <li class="list-group-item">
              <p class="lead"><%= machine.title %></p>
            </li>
          <% end %>
          </ul>
          <%= will_paginate @list_all_m %>
        </div>
      </div>
      
      <%= f.submit :class => 'btn btn-lg btn-block btn-success' %>
  
  <% end %>
</div>