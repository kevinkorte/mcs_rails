<div class="container">
  <div class="page-header">
    <h1>Edit <%=@machine.title%></h1>
  </div>
  <div class="col-md-12 btn-group-wrapper">
    <div class="btn-group pull-right" role="group" aria-label="...">
      <%= link_to "Back", admin_machine_path, class: "btn btn-default" %>
      <%= render "layouts/new_button" %>
      <%= link_to "All Machines", admin_machines_path, class: "btn btn-info" %>
      <%= link_to "All Parts", admin_parts_path, class: "btn btn-default" %>
      <%= link_to "Delete", admin_machine_path, class: "btn btn-danger", method: :delete, data: {confirm: "Are You Sure"} %>
    </div>
  </div>

  <%= simple_form_for @machine, url:admin_machine_path, html: {class: 'form-horizontal' } do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title, class: 'col-md-3' %>
        <div class="col-sm-9">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <ul class="list-group">
      <% @parts.each do |part| %>
      <li class="list-group-item">
        <%= check_box_tag 'machine[part_ids][]', part.id, @machine.parts.include?(part) %>
        <%= part.brand %> <%= part.part_number %>
      </li>
      <% end %>
      </ul>
    </div>
    
    <%= f.submit :class => 'btn btn-lg btn-block btn-success' %>
  
  
  <% end %>

</div>